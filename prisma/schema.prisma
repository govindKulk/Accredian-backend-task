generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Referral {
  id Int @id @default(autoincrement())
  refererEmail String @db.VarChar(255) 
  refererName String @db.VarChar(255)
  refereeEmail String @db.VarChar(255)
  message String? @db.VarChar(255)

  @@unique([refererEmail, refereeEmail])
}